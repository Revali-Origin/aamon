# ===============================
# 🌐 Discord Bot 基本設定
# ===============================

# Discord Botトークン（Discord Developer Portalで取得）
DISCORD_TOKEN=your_discord_bot_token_here

# BotのクライアントID（Slash Command登録時に使用）
DISCORD_CLIENT_ID=123456789012345678

# （任意）テスト用Guild ID（開発時はここにコマンドを登録）
DISCORD_GUILD_ID=987654321098765432

# 環境モード（開発=development / 本番=production）
NODE_ENV=production

# ===============================
# 🗄️ データベース設定（Prisma / MariaDB）
# ===============================

# Prisma用のDB接続文字列
# MariaDBの場合
DATABASE_URL="mysql://bot_user:bot_password@localhost:3306/discord_bot?connection_limit=5"

# PostgreSQLの場合（将来切り替え時）
# DATABASE_URL="postgresql://bot_user:bot_password@localhost:5432/discord_bot?schema=public"

# ===============================
# ⚙️ 運用・保持設定
# ===============================

# 週末販売情報（ESO）保持期間（週数）
RETENTION_VENDOR_WEEKS=26

# 監査ログ保持期間（週）
RETENTION_VENDOR_AUDIT_WEEKS=4

# 通知ログ保持期間（日）
RETENTION_NOTIFY_DAYS=90

# BOTのログ出力レベル（error, warn, info, debug）
LOG_LEVEL=info

# BOTのタイムゾーン設定（日本時間）
TZ=Asia/Tokyo

# ===============================
# 🔐 セキュリティ / 限定実行設定
# ===============================

# 許可ユーザーIDをカンマ区切りで指定（本人照合機能用）
ALLOWED_USER_IDS=123456789012345678,234567890123456789

# コマンドログを残すファイルパス（任意）
LOG_PATH=/opt/discord-bot/var/bot.log

# 緊急停止時の通知チャンネルID（任意）
ALERT_CHANNEL_ID=112233445566778899

# ===============================
# 🕒 外部API関連（任意）
# ===============================

# ESO週末販売情報の取得元（必要に応じて変更可）
ESO_VENDOR_URL_LUXURY=https://esoapi.example.com/luxury.json
ESO_VENDOR_URL_GOLDEN=https://esoapi.example.com/golden.json

# サーバーステータス取得間隔（秒）
STATUS_REFRESH_INTERVAL=300
